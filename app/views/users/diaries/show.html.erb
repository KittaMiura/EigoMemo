<div class="content">
  <h1>日記詳細</h1>
  
  <p><%= link_to '一覧に戻る', diaries_path %></p>
  <p><%= link_to '編集', edit_diary_path(@diary) %></p>
  <p><%= link_to '削除', diary_path(@diary), method: :DELETE, data: {confirm: "本当に削除しますか？"} %></p>
  
  <p><%= @diary.title %></p>
  
  <p><%=safe_join(@diary.japanese.split("\n"),tag(:br))%></p>
  
  <p><%=safe_join(@diary.english.split("\n"),tag(:br))%></p>
  
</div>
  