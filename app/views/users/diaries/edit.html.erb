<div class="content">
  <h1>日記編集</h1>
  
  <p><%= link_to '一覧にもどる', diaries_path %></p>
    
  <%= form_with model: @diary do |f| %>

  <div class="row">
    <div class="field col-sm-12">
      <%= f.label :title, "日記タイトル" %></br>
      <%= f.text_field :title, class: 'diary-field-1' %>
    </div>
    
    <div class="field mt-3 col-sm-12">
      <%= f.label :japanese, "まず日本語で3文以上日記を書こう！" %></br>
      <%= f.text_area :japanese, class: 'diary-field col-sm-6' %>
    </div>
    
    <div class="field mt-3 col-sm-12">
      <%= f.label :english, "次に上で書いた文を英語で書こう！" %></br>
      <%= f.text_area :english, class: 'diary-field col-sm-6' %>
    </div>
    
    <div class="field mt-3 col-sm-12">
      <%= f.label :english_answer, "最後に、上の文章が間違っていたら正しい文章に直そう！" %></br>
      <%= f.label :english_answer, "（合っていたら「正解！」と描書こう！）" %></br>
      <%= f.text_area :english_answer, class: 'diary-field col-sm-6' %>
    </div>
  </div>
  
  <div class="submit">
      <%= f.submit "日記更新"%>
  </div>
  
  <% end %>
</div>