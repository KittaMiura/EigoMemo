<div class="content">
  <div class="row">
    <div class='col-sm-4'>
      <p><%= link_to 'スペル登録', new_post_path %></p>
      <p><%= link_to 'プロフィール', profile_path(current_user.id) %></p>
    </div>
    
    <div class='col-sm-5'>
      <h1>スペル検索結果</h1>
      
      <div class="search_form mb-5">
        スペル検索
        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
    
      <% @posts.each do |post| %>
        <div class="spell">
          <%= link_to post_path(post) do %><%= post.spell %><% end %>
          <%= post.meaning %><br>
        </div>
      <% end %>
    </div>
  </div>
</div>