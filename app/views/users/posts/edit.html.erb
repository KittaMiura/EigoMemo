<div class="content">
    <h1>スペル編集</h1>
    
    <p><%= link_to '詳細にもどる', post_path(@post.id) %></p>
    
    <%= form_with model: @post do |f|%>

      <div class="field">
        <%= f.label :spell, "スペル" %></br>
        <%= f.text_field :spell%>
      </div>
    
      <div class="field">
        <%= f.label :meaning, "意味" %></br>
        <%= f.text_area :meaning%>
      </div>
    
      <div class="submit">
        <%= f.submit "登録"%>
      </div>
    
    <% end %>
</div>