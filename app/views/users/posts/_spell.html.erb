<div class="search_form mb-3">
  <h4>フリーワード検索</h4>
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word %>
    <%= f.submit "検索" %>
  <% end %>
</div>

<% posts.each do |post| %>
  <div class="spell">
    <%= link_to post_path(post) do %><%= post.spell %><% end %>
    <%= post.meaning %><br>
  </div>
<% end %>